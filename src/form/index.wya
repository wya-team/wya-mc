<template>
	<form class="mc-form {{border ? 'mc-hairline__top-bottom' : ''}} mc-class" style="{{mcStyle}}">
		<slot />
	</form>
</template>
<script>
import McComponent from '../common/component';

McComponent({
	relations: {
		'./form-item': {
			type: 'descendant',
			linked(child) {
				this.children = this.children || [];
				this.children.push(child);
			},
			unlinked(child) {
				this.children = (this.children || []).filter((it) => it !== child);
			}
		}
	},
	props: {
		model: {
			type: Object,
			observer(val) {
				this.children && this.setFieldsValue();
			}
		},
		rules: Object,
		labelWidth: Number,
		border: {
			type: Boolean,
			value: false
		},
		showMessage: {
			type: Boolean,
			value: true
		},
		labelPosition: {
			type: String,
			value: 'left'
		},
		// 分割线
		divider: {
			type: Boolean,
			value: true
		},
	},
	lifetimes: {
		ready() {
			this.$emit('ready', this);
		}
	},
	methods: {
		resetFields() {
			this.children.forEach(child => {
				child.resetField();
			});
		},
		setFieldsValue() {
			this.children.forEach(child => {
				child.setFieldValue();
			});
		},
		validate(opts = {}) {
			return new Promise((resolve, reject) => {
				let count = 0;
				let originErrors = [];

				if (!this.children.length) {
					resolve();
					return;
				}

				this.children.forEach(item => {
					item.validate('', (res = {}) => {
						if (res.msg || res.message) {
							originErrors.push(res);
						}
						if (++count === this.children.length) {
							// let errors = this.sortErrors(originErrors);
							// TODO 动态添加的节点需要排序
							let errors = originErrors;

							// 全部校验完成
							if (errors.length !== 0) {
								reject(errors);
								this._toast(errors[0].msg || errors[0].message);
								// TODO scroll 自动滚动到校验错误的地方
							}

							resolve();
						}
					});
				});
			});
		},
		getField(prop) {
			const field = this.children.find(child => child.data.prop === prop);

			if (!field) throw new Error('form', '请选择有用的prop值');

			return field;
		},
		validateField(prop, opts = {}) {
			return new Promise((resolve, reject) => {
				let field = this.getField(prop);
				field.validate('', (res = {}) => {
					let errorMsg = res.msg || res.message;
					if (errorMsg) {
						reject(errorMsg);
						this._toast(errorMsg);

						// TODO scroll 自动滚动到校验错误的地方
					}
					resolve();
				});
			});
		},
		_toast(msg) {
			this.data.showMessage && wx.showToast({ title: msg, icon: 'none' });
		}
	}
});

</script>
<style lang="scss">
@import '../common/index.scss';

.mc-form {
	display: block;
}
</style>
<config>
{
	"component": true
}
</config>
