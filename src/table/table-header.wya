	overflow: visible;
	color: #666;
	border-bottom: 1px solid #ebeef5;
	box-sizing: border-box;
	font-size: 24rpx;
	font-weight: 400;
	&-sortable {
		display: flex;
		flex-direction: column;
		align-items: center;
		margin-top: -5rpx;
		padding-left: 10rpx;
	}

	&-tr {
		display: flex;
		align-items: center;
		font-weight: bold;
		box-sizing: border-box;
		background: white;
		&::last-child {
			border-right: none;
		}
	}

	&-th {
		display: flex;
		align-items: center;
